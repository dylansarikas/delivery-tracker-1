<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <!---->
      <input type="hidden" id="user_id_box" name="query_user_id">

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on">
  <h2>Waiting On</h2>

  <ul>
    <% @list_of_deliveries.each do |delivery| %>
      <% if delivery.user.id == current_user.id && delivery.arrived == false %>
        <li>
          <div>
            <%= delivery.description %>
          </div>

          <!---->
          <% if delivery.supposed_to_arrive_on < Time.now %>
            <div class="later">
              Supposed to arrive on <%= delivery.supposed_to_arrive_on %>
            </div>
          <% else %>
            <div class="fine">
              Supposed to arrive on <%= delivery.supposed_to_arrive_on %>
            </div>            
          <% end %>

          <div>
            <form action="/modify_delivery/<%=delivery.id%>" method="post">
              <input type="hidden" name="query_arrived" value="true">
              <button>
                Mark as received
              </button>
            </form>
          </div>
              
          <br>
        </li>
      <% end %>
    <% end %>
  </ul>

</div>

<hr>

<div class="received">
  <h2>Received</h2>
  <ul>
    <% @list_of_deliveries.each do |delivery| %>
      <% if delivery.user.id == current_user.id && delivery.arrived == true %>
        <li>
          <div>
            <%= delivery.description %>
          </div>
          <div>
            <small>
              Updated <%= delivery.updated_at %>
              <a href="/delete_delivery/<%=delivery.id%>">Delete</a>
            </small>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>

</div>

<hr>
